{
  "name": "snap-crop",
  "version": "0.1.0",
  "description": "React image cropping component with crop and fill modes",
  "type": "module",
  "main": "./dist/snap-crop.umd.cjs",
  "module": "./dist/snap-crop.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/snap-crop.js",
      "require": "./dist/snap-crop.umd.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:lib": "vite build --mode lib",
    "lint": "eslint .",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "react-easy-crop": "^5.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@tailwindcss/vite": "^4.1.17",
    "@types/node": "^24.10.1",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.22",
    "eslint": "^9.15.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^15.12.0",
    "postcss": "^8.5.6",
    "react": "^18.3.1",
    "react-colorful": "^5.6.1",
    "react-dom": "^18.3.1",
    "react-easy-crop": "^5.1.0",
    "tailwindcss": "^4.1.17",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.15.0",
    "vite": "^6.0.1",
    "vite-plugin-dts": "^4.3.0"
  },
  "keywords": [
    "react",
    "image",
    "crop",
    "cropper",
    "fill",
    "resize",
    "aspect-ratio",
    "react-easy-crop"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Lupeiwen0/snap-crop.git"
  },
  "bugs": {
    "url": "https://github.com/Lupeiwen0/snap-crop/issues"
  },
  "homepage": "https://github.com/Lupeiwen0/snap-crop#readme",
  "license": "MIT",
  "author": ""
}
